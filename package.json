{
  "name": "vvvdigitals",
  "version": "1.0.0",
  "description": "VVVDigitals - Commanding Motion with Pure Language",
  "main": "index.html",
  "scripts": {
    "dev": "npx serve -l 3000",
    "build": "npm run build:css && npm run build:js && npm run build:html",
    "build:css": "npx postcss assets/css/*.css --dir dist/assets/css --use cssnano autoprefixer",
    "build:js": "npx terser assets/js/main.js -o dist/assets/js/main.min.js",
    "build:html": "npx html-minifier-terser --input-dir . --output-dir dist --file-ext html --collapse-whitespace",
    "clean": "rm -rf dist",
    "deploy": "npm run build && rsync -avz dist/ user@server:/var/www/vvvdigitals/",
    "lighthouse": "npx lighthouse http://localhost:3000 --view",
    "format": "npx prettier --write '**/*.{html,css,js,json,md}'",
    "validate": "npx html-validate '*.html'"
  },
  "keywords": [
    "automation",
    "artistry",
    "content-infrastructure",
    "linguistic-engineering",
    "digital-agency"
  ],
  "author": "VVVDigitals",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "html-minifier-terser": "^7.2.0",
    "html-validate": "^8.7.4",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "serve": "^14.2.1",
    "terser": "^5.26.0"
  },
  "optionalDependencies": {
    "lighthouse": "^11.4.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vvvdigitals/website.git"
  },
  "homepage": "https://vvvdigitals.com"
}
